@model IEnumerable<rentcar>
@{
    ViewData["Title"] = "Index";
}





<div class="container p-3">
    <div class="row pt-4">
    <div class="col-6">
        <h2 class="text-primary">Rentcar List</h2>
    </div>
    <div class="col-6 text-end">
        <a asp-controller="rentcar" asp-action="Create" class="btn btn-primary">
           <i class="bi bi-plus-circle"></i> &nbsp; Create New rentcar
        </a>
    </div>
    </div>
</div>

<table class= " table table-bordered table-striped" style= "width:100%">
    <thead>
        <tr>
            <th>
                Model
            </th>
            <th>
                Price
            </th>
            <th>
                Year
            </th>
            <th>
                Rentdate
            </th>
            <th>
                Returndate
             </th>
            <th>
                IsAvailable
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model )
        {
            <tr>
                <td width="50%">
                    @obj.Model
                </td>

                <td width="30%">
                    @obj.Price
                </td>

                    <td width="30%">
                    @obj.Year
                    </td>
               
                <td width="50%">
                    @obj.Rentdate
                </td>

                <td width="50%">
                    @obj.Returndate
                </td>

                <td width="20%">
                    @obj.IsAvailable
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="rentcar" asp-action="Edit" asp-route-id="@obj.Id"
                       class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-controller="rentcar" asp-action="Delete" asp-route-id="@obj.Id"
                       class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
